			</property>
		</specie>
	</atomic_species>

	<atomic_list units="bohr" nat="18" >
		<atom name="O">
			<position>
				<real rank="1" n1="3">
					3.18829368  14.83237039   1.22882961
				</real>
			</position>
		</atom>	
		<atom name="O">
			<position>
				<real rank="1" n1="3">
					7.83231469   6.78704039   1.22882961
				</real>
			</position>
		</atom>		
		<atom name="O">
			<position>
